# ===========================================
# Capstone Server Configuration
# ===========================================
# Copy this file to .env

# -----------------
# Server
# -----------------
NODE_ENV=development
PORT=3001
HOST=localhost

# -----------------
# Database
# -----------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=genomic_viz
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Database URL (alternative to individual settings)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/genomic_viz

# -----------------
# Redis
# -----------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# -----------------
# Authentication
# -----------------
JWT_SECRET=dev_jwt_secret_change_in_production_minimum_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# -----------------
# CORS
# -----------------
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# -----------------
# Rate Limiting
# -----------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------
# File Uploads
# -----------------
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
ALLOWED_EXTENSIONS=.vcf,.maf,.csv,.tsv,.txt,.bed,.gff

# -----------------
# Logging
# -----------------
LOG_LEVEL=debug
LOG_FORMAT=dev

# -----------------
# External APIs
# -----------------
OPENAI_API_KEY=sk-your-api-key
OPENAI_MODEL=gpt-4

# -----------------
# Error Tracking
# -----------------
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# -----------------
# Feature Flags
# -----------------
FEATURE_AI_CHAT=true
FEATURE_FILE_UPLOAD=true
FEATURE_WEBSOCKET=false
