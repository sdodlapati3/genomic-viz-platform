{
  "name": "genomic-viz-platform",
  "version": "0.1.0",
  "description": "A learning platform for genomic data visualization, inspired by ProteinPaint",
  "type": "module",
  "private": true,
  "workspaces": [
    "tutorials/**/*/",
    "capstone/*",
    "shared/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=capstone/client",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf node_modules **/node_modules **/dist **/build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "npm run migrate --workspace=capstone/server",
    "db:seed": "npm run seed --workspace=capstone/server"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/genomic-viz-platform.git"
  },
  "keywords": [
    "genomics",
    "visualization",
    "d3js",
    "proteinpaint",
    "cancer",
    "bioinformatics",
    "data-visualization"
  ],
  "author": "Your Name",
  "license": "MIT"
}
